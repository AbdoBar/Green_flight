<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivites.Green_Activity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/Air_red">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="@color/Air_green"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Your suggestions for preserving the environment"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:background="@color/Air_red"
                ></LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="45dp"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="45dp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="@color/Air_green"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@color/Air_red"></LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@color/Air_red"
                android:layout_margin="20dp"></LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@color/Air_red"></LinearLayout>



        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>